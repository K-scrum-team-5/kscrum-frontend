{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport { genres } from '@/data/genres';\nexport default {\n  name: 'Init_movie',\n  data() {\n    return {\n      genres,\n      selectedMovies: []\n    };\n  },\n  methods: {\n    toggleSelection(movie) {\n      const index = this.selectedMovies.indexOf(movie.title);\n      if (index === -1) {\n        // 선택되지 않았다면 추가\n        this.selectedMovies.push(movie.title);\n      } else {\n        // 선택되었다면 제거\n        this.selectedMovies.splice(index, 1);\n      }\n    },\n    isMovieSelected(movie) {\n      return this.selectedMovies.includes(movie.title); // 선택 여부 확인\n    },\n    completeSelection() {\n      console.log(\"Selection completed:\", this.selectedMovies); // 완료 이벤트 처리\n    }\n  }\n};","map":{"version":3,"names":["genres","name","data","selectedMovies","methods","toggleSelection","movie","index","indexOf","title","push","splice","isMovieSelected","includes","completeSelection","console","log"],"sources":["C:\\Users\\82105\\se_project\\src\\views\\Init_movie.vue"],"sourcesContent":["<template>\r\n    <v-container fluid no-gutters>\r\n      <div class=\"init-movie\">\r\n        <h1>영화 초기 선택</h1>\r\n        <p>평소 취향의 영화를 선택하십시오</p>\r\n      </div>\r\n\r\n      <div v-for=\"genre in genres\" :key=\"genre.name\" class=\"genre-col\">\r\n        <v-row class=\"genre-row\">\r\n          <v-col>\r\n            <h2>{{ genre.name }}</h2>\r\n          </v-col>\r\n        </v-row>\r\n\r\n        <v-row class=\"poster-row\">\r\n          <v-col v-for=\"movie in genre.movies\" :key=\"movie.title\" cols=\"6\" md=\"3\">\r\n            <v-card \r\n              @click=\"toggleSelection(movie)\" \r\n              :class=\"isMovieSelected(movie) ? 'selected' : ''\"\r\n            >\r\n              <v-img \r\n                :src=\"movie.posterUrl\" \r\n                aspect-ratio=\"0.66\"\r\n                contain\r\n              />\r\n              <v-card-title>{{ movie.title }}</v-card-title>\r\n            </v-card>\r\n          </v-col>\r\n        </v-row>\r\n      </div>\r\n\r\n      <v-row>\r\n        <v-col class=\"button-col\">\r\n          <v-btn \r\n            @click=\"completeSelection\" \r\n            color=\"gray\"\r\n            block\r\n            large  \r\n            class=\"complete-btn\"\r\n          >\r\n            완 료\r\n          </v-btn>\r\n        </v-col>\r\n      </v-row>\r\n    </v-container>\r\n  </template>\r\n  \r\n  <script>\r\n  import { genres } from '@/data/genres';\r\n  export default {\r\n    name: 'Init_movie',\r\n    data() {\r\n        return {\r\n            genres,\r\n            selectedMovies: [],\r\n        };\r\n    },\r\n    methods: {\r\n    toggleSelection(movie) {\r\n      const index = this.selectedMovies.indexOf(movie.title);\r\n        if (index === -1) {\r\n        // 선택되지 않았다면 추가\r\n          this.selectedMovies.push(movie.title);\r\n        } else {\r\n        // 선택되었다면 제거\r\n          this.selectedMovies.splice(index, 1);\r\n        }\r\n      },\r\n      isMovieSelected(movie) {\r\n        return this.selectedMovies.includes(movie.title); // 선택 여부 확인\r\n      },\r\n      completeSelection() {\r\n        console.log(\"Selection completed:\", this.selectedMovies); // 완료 이벤트 처리\r\n      },\r\n    },\r\n  };\r\n  </script>\r\n  \r\n  <style scoped>\r\n  .movie-poster {\r\n    text-align: center;\r\n  }\r\n  .init-movie {\r\n    color: gray; \r\n    background-color: white; \r\n    text-align: center;\r\n    padding: 10px;\r\n  }\r\n  .v-img {\r\n    width: 100%; /* 컨테이너에 맞춰 크기를 조절 */\r\n    height: auto; /* 비율을 유지 */\r\n  }\r\n  .genre-col {\r\n    margin-bottom: 50px;\r\n  }\r\n  .genre-row {\r\n    padding-left: 200px;\r\n    padding-right: 200px;\r\n  }\r\n  .poster-row {\r\n    padding-left: 200px;\r\n    padding-right: 200px;\r\n  }\r\n  .selected::after {\r\n    content: \"\";\r\n    position: absolute; /* 오버레이를 위해 절대 위치 설정 */\r\n    top: 0;\r\n    left: 0;\r\n    right: 0;\r\n    bottom: 0;\r\n    background-color: rgba(0, 0, 0, 0.4); /* 반투명 회색 오버레이 */\r\n  }\r\n  .v-card {\r\n    position: relative;\r\n  }\r\n  .complete-btn {\r\n    display: block;\r\n    text-align: center;\r\n    padding: 10px; \r\n  }\r\n  .button-col {\r\n    padding-left: 200px;\r\n    padding-right: 200px;\r\n  }\r\n  </style>\r\n"],"mappings":";AAgDE,SAASA,MAAK,QAAS,eAAe;AACtC,eAAe;EACbC,IAAI,EAAE,YAAY;EAClBC,IAAIA,CAAA,EAAG;IACH,OAAO;MACHF,MAAM;MACNG,cAAc,EAAE;IACpB,CAAC;EACL,CAAC;EACDC,OAAO,EAAE;IACTC,eAAeA,CAACC,KAAK,EAAE;MACrB,MAAMC,KAAI,GAAI,IAAI,CAACJ,cAAc,CAACK,OAAO,CAACF,KAAK,CAACG,KAAK,CAAC;MACpD,IAAIF,KAAI,KAAM,CAAC,CAAC,EAAE;QAClB;QACE,IAAI,CAACJ,cAAc,CAACO,IAAI,CAACJ,KAAK,CAACG,KAAK,CAAC;MACvC,OAAO;QACP;QACE,IAAI,CAACN,cAAc,CAACQ,MAAM,CAACJ,KAAK,EAAE,CAAC,CAAC;MACtC;IACF,CAAC;IACDK,eAAeA,CAACN,KAAK,EAAE;MACrB,OAAO,IAAI,CAACH,cAAc,CAACU,QAAQ,CAACP,KAAK,CAACG,KAAK,CAAC,EAAE;IACpD,CAAC;IACDK,iBAAiBA,CAAA,EAAG;MAClBC,OAAO,CAACC,GAAG,CAAC,sBAAsB,EAAE,IAAI,CAACb,cAAc,CAAC,EAAE;IAC5D;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}